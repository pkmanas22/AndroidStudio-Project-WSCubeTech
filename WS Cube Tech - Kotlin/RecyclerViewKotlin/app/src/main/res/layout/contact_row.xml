<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- CardView for displaying a single contact -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/liRow"
            >

            <!-- Contact image -->
            <ImageView
                android:id="@+id/c_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#C9A1A0A5"
                android:contentDescription="Contact Image"
                tools:srcCompat="@drawable/a"
                />

            <TextView
                android:id="@+id/c_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conatct Name"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/c_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="10sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>