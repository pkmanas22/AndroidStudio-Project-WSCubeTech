<?xml version="1.0" encoding="utf-8"?>
<!-- This is an XML layout file for an Android application -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#3ACFEA">

    <!-- This is a TextView with the text "Heading" and a bold text style -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Heading"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:id="@+id/heading"/>

    <!-- This is an EditText for entering a name -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Enter name"
        android:backgroundTint="#FFF"
        android:background="#FFF"
        android:layout_margin="15dp"
        android:id="@+id/editName"/>

    <!-- This is an EditText for entering a number -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Enter number"
        android:backgroundTint="#FFF"
        android:background="#FFF"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/editNumber"/>

    <!-- This is a Button for submitting the form -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:id="@+id/submitBtn"/>

</LinearLayout>
